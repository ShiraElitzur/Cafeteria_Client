<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/colorHeadlines"
    >

<Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meal Name"
        android:id="@+id/tvMealName"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Extras Available: 2"
        android:gravity="center_horizontal"
        android:id="@+id/tvExtrasAmount"
        android:layout_gravity="end"
        android:layout_weight="10" />

    <Button
        android:padding="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Add Extras"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/btnExtras"
        android:clickable="true"
        android:layout_weight="10"
        android:gravity="center_vertical"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerExtras"
        android:layout_weight="10"
        android:overScrollMode="ifContentScrolls"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Drink Something?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/btnDrink"
        android:clickable="true"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:layout_weight="10"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerDrink"
        android:layout_weight="10"
        android:overScrollMode="ifContentScrolls"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etNote"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10"
        android:hint="You can leave us a note"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total: 25 â‚ª"
            android:gravity="end"
        android:padding="10dp"
        android:id="@+id/tvTotal"
        android:layout_weight="10"
            />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_weight="10"
        >

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Keep Shopping"
            android:id="@+id/btnKeepShopping"
            android:layout_gravity="bottom"
            />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:id="@+id/btnPay"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</LinearLayout>